<% content_for :nav do %>
  <%= render 'layouts/nav' %>
<% end %>

<div id='events' data-controller='event update destroy' data-action='update:created->event#redirect destroy:deleted->event#query'
    data-event-url-value='/api/v1/events' data-update-url-value='/api/v1/events' data-destroy-url-value='/api/v1/events'
    data-event-offset-value=0 data-event-limit-value=10>
  <template data-event-target='template'>
    <div class='col-xs-4'>
      <div class='card'>
        <img class='img-fluid' data-nxt-image_url>
        <div class='card-body'>
          <a href='#' data-nxt-link_><h5 class='card-title' data-nxt-title></h5></a>
          <h6 class='card-subtitle mb-2 text-muted' data-nxt-datetime></h6>
          <h6 class='card-subtitle mb-2 text-muted' data-nxt-address></h6>
          <p class='card-text' data-nxt-description></p>
        </div>
        <div class='d-flex align-content-center justify-content-between card-footer'>
          <p class='m-0'><small class='text-muted'>Last updated <span id="updated_at" data-nxt-updated_at></span></small></p>
          <div class='dropdown'>
            <button class='btn-sm btn-secondary' data-bs-toggle='dropdown'>
              <i class='bi bi-three-dots-vertical'></i>
            </button>
            <ul class='dropdown-menu'>
              <li><a class='dropdown-item' data-nxt-box_office_url>Download Box Office</a></li>
              <li><hr class='dropdown-divider'></li>
              <li><a class='dropdown-item' data-action='destroy#destroyByValue' data-nxt-id data-nxt-nomod>Delete</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </template>
  <%= render 'form' %>
  <div class="container">
    <div class='row row-cols-3' data-event-target='dom' >
      <div class='col-xs-4' data-event-target='add'>
        <div class='card text-center align-items-center'>
          <div class='card-body'>
            <p class='card-text'><i class='bi bi-plus'></i>Add Event</p>
            <a  class='stretched-link' data-bs-toggle="modal" data-bs-target="#event-modal"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
